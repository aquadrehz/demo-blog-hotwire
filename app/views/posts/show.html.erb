<%= turbo_frame_tag dom_id @post do %>
  <div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <p class="my-5">
      <strong class="block font-medium mb-1">Title:</strong>
      <%= @post.title %>
    </p>
    <p class="my-5">
      <%= @post.content %>
    </p>

    <%= link_to 'Edit this post', edit_post_path(@post), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Delete this post', post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>

<% end %>
